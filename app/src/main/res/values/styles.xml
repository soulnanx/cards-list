<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">Avenir</item>
        <item name="android:statusBarColor">@color/app_background_color</item>
    </style>

    <style name="labelToolbarCardType" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Cardtype_toolbar_title</item>
        <item name="android:fontFamily">@font/avenir_bold</item>
        <item name="android:textColor">@color/toolbar_title_color</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="labelToolbarCardList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Cardlist_toolbar_title</item>
        <item name="android:textColor">@color/toolbar_title_color</item>
        <item name="android:layout_marginEnd">@dimen/margin_5x</item>
    </style>

    <style name="lineToolbarCardType" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_left_title</item>
    </style>

    <style name="defaultTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>